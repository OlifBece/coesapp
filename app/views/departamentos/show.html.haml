- model_class = Departamento
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:descripcion)
    %dd
      %pre.prettyprint= @departamento.descripcion

.form-group
  = link_to t('.back', default: t("helpers.links.back")), departamentos_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_departamento_path(@departamento), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), departamento_path(@departamento), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
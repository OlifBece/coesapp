- model_class = Asignatura
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:descripcion)
    %dd
      %pre.prettyprint= @asignatura.descripcion
    %dt.label.label-default= model_class.human_attribute_name(:anno)
    %dd
      %pre.prettyprint= @asignatura.anno
    %dt.label.label-default Tipo
    %dd
      %pre.prettyprint= @asignatura.tipoasignatura.descripcion.titleize
    %dt.label.label-default= model_class.human_attribute_name(:calificacion)
    %dd
      %pre.prettyprint= @asignatura.calificacion.titleize

    %dt.label.label-default= model_class.human_attribute_name(:departamento_id)
    %dd
      %pre.prettyprint= @asignatura.departamento.descripcion.titleize
    %dt.label.label-default= model_class.human_attribute_name(:catedra_id)
    %dd
      %pre.prettyprint= @asignatura.catedra.descripcion.titleize
    %dt.label.label-default= model_class.human_attribute_name(:id_uxxi)
    %dd
      %pre.prettyprint= @asignatura.id_uxxi
    %dt.label.label-default= model_class.human_attribute_name(:creditos)
    %dd
      %pre.prettyprint= @asignatura.creditos


.form-group.mt-3
  = link_to asignaturas_path, class: 'btn btn-outline-secondary ml-2' do
    = glyph 'chevron-left'
    = t('.back', default: t("helpers.links.back"))
  - if current_admin.maestros?
    = link_to edit_asignatura_path(@asignatura), class: 'btn btn-outline-info ml-2' do
      = glyph 'edit'
      = t('.edit', default: t("helpers.links.edit"))

  - if current_admin.ninja?
    = link_to asignatura_path(@asignatura), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-outline-danger ml-2' do
      = glyph 'trash'
      = t('.destroy', default: t("helpers.links.destroy"))


.tab-pane.fade{class: @mat_activa, id: "mat_#{@mat.id}#{@pcis}", "aria-labelledby": "mat_#{@mat.id}_tab#{@pcis}", :role => "tabpanel"}
	.border.p-md-2
		%b
			= "Total Secciones:#{@secciones.count}"
			= link_to 'javascript:void(0)', onclick: "$('#_seccionasignatura_id').val('#{@mat.id}');$('#nueva_seccion_titulo').html('Nueva Sección para #{@mat.descripcion}');$('#nueva_seccion').modal();", class: 'tooltip-btn float-left mr-md-3 btn btn-sm btn-outline-success', 'data_toggle': :tooltip, title: 'Agregar Sección' do
				.text-success= glyph :plus
		
		- if @secciones.count > 0
			%table.table.table-striped.table-sm.table-hover.table-bordered.table-responsive-md.mt-3
				%thead
					%tr
						%th T
						%th Sec.
						%th Profesor Tutor (Calificador)
						%th{style: 'width: 25%'} Profesores Secundarios
						%th Capacidad
						%th Estado
						- if current_admin and current_admin.altos?
							%th Opciones
				%tbody
					- @secciones.each do |seccion|
						%tr
							%td.tooltip-btn{'data_toggle': :tooltip, title: seccion.tipo_seccion.descripcion.titleize}= seccion.tipo_seccion_id.upcase
							%td= seccion.numero
							%td
								= "#{seccion.descripcion_profesor_asignado}"
								- if @editar_asignaturas
									.tooltip-btn{'data_toggle': :tooltip, title: 'Actualizar Tutor-Calificador'}
										= link_to seleccionar_profesor_seccion_path(seccion.id), {role: 'button'} do
											= glyph 'pencil'

							%td
								%table.table.table-striped.table-sm.table-hover.table-bordered.table-responsive-md
									-seccion.profesores.each do |p|
										%tr
											%td
												= p.descripcion
												- if @editar_asignaturas
													%b.tooltip-btn{'data_toggle': :tooltip, 'title'=>'Desasignar Este Profesor'}
														= link_to "#{desasignar_profesor_secundario_seccion_path(seccion.id)}?profesor_id=#{p.usuario_id}", {'data_confirm' => "¿Está seguro de esta acción?"},{role: 'button'} do
															%i.glyphicon.glyphicon-minus.text-danger

									- if @editar_asignaturas
										%tr
											%td
												%b.tooltip-btn{'data_toggle': :tooltip, 'title'=>'Agregar Profesor Secundario'}
													= link_to "#{seleccionar_profesor_seccion_path(seccion.id)}?sec=true",{role: 'button'} do
														%i.glyphicon.glyphicon-plus.text-success
							%td
								= render partial: '/admin/secciones/cambiar_capacidad', locals: {seccion: seccion}

							%td
								-if seccion.calificada
									= colocar_numeros_seccion seccion

								- else
									%span.badge.badge-info Por calificar
									%b.tooltip-btn{'data_toggle'=>'tooltip', 'title'=>'Total Sin Calificar'}
										%span.badge.badge-dark= seccion.total_sin_calificar
							- if current_admin #and current_admin.altos? 
								%td
									= render partial: 'admin/asignaturas/panel_detalle_opciones', locals: {seccion: seccion}
- model_class = CatedraDepartamento
.page-header
  %h6 CÃ¡tedras para el Departamento
%table.table.table-striped.table-sm.table-hover.table-responsive-md
  %thead
    %tr
      %th= model_class.human_attribute_name(:catedra_id)
      - unless controller_name.eql? 'departamentos'
        %th= model_class.human_attribute_name(:departamento_id)
      %th= model_class.human_attribute_name(:orden)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @catedras_departamentos.each do |catedra_departamento|
      %tr
        %td= catedra_departamento.catedra.descripcion
        - unless controller_name.eql? 'departamentos'
          %td= catedra_departamento.departamento_id
        %td= catedra_departamento.orden
        %td
          - unless controller_name.eql? 'departamentos'
            = link_to "/catedras_departamentos/#{catedra_departamento.id}",class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do
              = glyph 'info-sign'
            = link_to "/catedras_departamentos/#{catedra_departamento.id}/edit", class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do
              = glyph 'pencil'
          = link_to "/catedras_departamentos/#{catedra_departamento.id}", method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do
            .text-danger= glyph 'remove'

=# link_to t('.new', default: t("helpers.links.new")), "/catedras_departamentos/new", class: 'btn btn-primary'

= render 'admin/catedras_departamentos/form'

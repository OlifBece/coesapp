- model_class = TipoSeccion
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:descripcion)
    %dd
      %pre.prettyprint= @tipo_seccion.descripcion

.form-group
  = link_to t('.back', default: t("helpers.links.back")), tipo_secciones_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_tipo_seccion_path(@tipo_seccion), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), tipo_seccion_path(@tipo_seccion), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
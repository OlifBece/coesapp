- model_class = Bloquehorario
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:dia)
    %dd
      %pre.prettyprint= @bloquehorario.dia
    %dt.label.label-default= model_class.human_attribute_name(:entrada)
    %dd
      %pre.prettyprint= @bloquehorario.entrada
    %dt.label.label-default= model_class.human_attribute_name(:salida)
    %dd
      %pre.prettyprint= @bloquehorario.salida
    %dt.label.label-default= model_class.human_attribute_name(:profesor_id)
    %dd
      %pre.prettyprint= @bloquehorario.profesor_id
    %dt.label.label-default= model_class.human_attribute_name(:seccion_id)
    %dd
      %pre.prettyprint= @bloquehorario.seccion_id
    %dt.label.label-default= model_class.human_attribute_name(:plantillahorario_id)
    %dd
      %pre.prettyprint= @bloquehorario.plantillahorario_id

.form-group
  = link_to t('.back', default: t("helpers.links.back")), bloquehorarios_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_bloquehorario_path(@bloquehorario), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), bloquehorario_path(@bloquehorario), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
- model_class = Bloquehorario
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:dia)
      %th= model_class.human_attribute_name(:entrada)
      %th= model_class.human_attribute_name(:salida)
      %th= model_class.human_attribute_name(:profesor_id)
      %th= model_class.human_attribute_name(:seccion_id)
      %th= model_class.human_attribute_name(:plantillahorario_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @bloquehorarios.each do |bloquehorario|
      %tr
        %td= bloquehorario.id
        %td= bloquehorario.dia
        %td= bloquehorario.entrada
        %td= bloquehorario.salida
        %td= bloquehorario.profesor_id
        %td= bloquehorario.seccion_id
        %td= bloquehorario.plantillahorario_id
        %td=l bloquehorario.created_at, format: :long
        %td
          = link_to bloquehorario_path(bloquehorario), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_bloquehorario_path(bloquehorario), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to bloquehorario_path(bloquehorario), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do
            .text-danger= glyph 'trash'

= link_to t('.new', default: t("helpers.links.new")), new_bloquehorario_path, class: 'btn btn-primary'

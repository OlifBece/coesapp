.modal.fade#estudiante_seccion{ role: "dialog"}
	.modal-dialog
		.modal-content
			%h5.alert.alert-info
				= "Inscribir a #{@estudiante.descripcion} en secci贸n del periodo #{@periodo_actual_id}"
			.modal-body
				.border.p-3
					= form_tag({controller: 'inscripcionsecciones', action: 'crear'},{class: 'form-horizontal'} ) do |f|
						= hidden_field_tag :estudiante_id, @estudiante.usuario_id
						=#grouped_collection_select(:cal_seccion, :id, CalMateria.all.sort_by{|m| m.cal_categoria.orden and m.cal_categoria.id} , :cal_secciones, :descripcion_reversa, :id, :descripcion, {:prompt => "--Seleccione Secci贸n--"}, {required: true, class: 'selects2'}) 

						-secciones = Seccion.del_periodo @periodo_actual_id 
						.form-group
							.col-md-2
								%b Estudiante:
							.col-md-12
								%p= @estudiante.descripcion

						.form-group
							.col-md-2
								%b Secci贸n:
							.col-md-12
								=collection_select(:seccion, :id, secciones, :id, :descripcion, {:prompt => "--Seleccione Secci贸n--"}, {required: true, class: 'selects2 text-field form-control', style: 'width:100%'})

						=hidden_field_tag 'controlador', @controlador
						=hidden_field_tag 'accion', @accion
						%br
						%a.btn{data: {dismiss: 'modal'}} Cancelar

						= submit_tag "Guardar", :disable_with => 'Enviando...', class: 'btn btn-primary'

:javascript

	$(document).ready(function() {
		$(".selects2").select2();		
	});





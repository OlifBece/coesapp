- model_class = Departamento
.page-header
  %h2
    =t '.title', default: model_class.model_name.human.titleize
    de 
    = @departamento.descripcion
    = "(#{@departamento.id})"
    = link_to edit_departamento_path(@departamento), class: 'btn btn-default' do
      = glyph 'edit'
      = t('.edit', default: t("helpers.links.edit"))
.border.p-3
  - @catedradepartamento = Catedradepartamento.new(departamento_id: @departamento.id)

  = render file: '/admin/catedradepartamentos/index'

.form-group.mt-3
  = link_to t('.back', default: t("helpers.links.back")), :back, class: 'btn btn-secondary'
  = link_to departamento_path(@departamento), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger' do
    = glyph 'trash'
    = t('.destroy', default: t("helpers.links.destroy"))
  = link_to new_asignatura_path, class: 'btn btn-success ml-1' do 
    = glyph 'plus'
    Asignatura
.modal.hide.fade#set_profesor{'aria-hidden': false, tabindex: '-1'}
  .modal-dialog
    .modal-content
      .alert.alert-info.text-center        
        %h6 
          - if @profesor
            Cambiar de departamento a:
          - else
            Registrar como profesor a:
        %h6.text-italic= @usuario.nombre_completo 
        <button type="button" class="close fade" data-dismiss="modal" aria-hidden="true">Ã—</button>
      .modal-body

        = form_tag(set_profesor_usuario_path, class: 'form-horizontal') do
          = hidden_field_tag :id, @usuario.id
          = hidden_field_tag :cambiar_dpto, true if @profesor

          .modal-body

            .form-group
              %h6.col-md-12 Departamento
              .col-md-12
                = grouped_collection_select :profesor, :departamento_id, Escuela.all, :departamentos, :descripcion, :id, :descripcion, {prompt: "-- Seleccione Departamento --"}, { class: 'text_field form-control'}
                =# collection_select(:profesor, :departamento_id, Departamento.all, :id, :descripcion, {prompt: "-- Seleccione Departamento --"}, {required: true, class: 'text_field form-control'})

          .modal-footer
            %a.btn{data: {dismiss: 'modal'}} Cancelar
            = submit_tag 'Guardar', class: 'btn btn-primary'

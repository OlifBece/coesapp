- model_class = Usuario
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:ci)
    %dd
      %pre.prettyprint= @usuario.ci
    %dt.label.label-default= model_class.human_attribute_name(:nombres)
    %dd
      %pre.prettyprint= @usuario.nombres
    %dt.label.label-default= model_class.human_attribute_name(:apellidos)
    %dd
      %pre.prettyprint= @usuario.apellidos
    %dt.label.label-default= model_class.human_attribute_name(:email)
    %dd
      %pre.prettyprint= @usuario.email
    %dt.label.label-default= model_class.human_attribute_name(:telefono_habitacion)
    %dd
      %pre.prettyprint= @usuario.telefono_habitacion
    %dt.label.label-default= model_class.human_attribute_name(:telefono_movil)
    %dd
      %pre.prettyprint= @usuario.telefono_movil
    %dt.label.label-default= model_class.human_attribute_name(:password)
    %dd
      %pre.prettyprint= @usuario.password
    %dt.label.label-default= model_class.human_attribute_name(:sexo)
    %dd
      %pre.prettyprint= @usuario.sexo

.form-group
  = link_to t('.back', default: t("helpers.links.back")), usuarios_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_usuario_path(@usuario), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), usuario_path(@usuario), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
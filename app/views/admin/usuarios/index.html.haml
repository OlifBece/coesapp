- model_class = Usuario
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:ci)
      %th= model_class.human_attribute_name(:nombres)
      %th= model_class.human_attribute_name(:apellidos)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:telefono_habitacion)
      %th= model_class.human_attribute_name(:telefono_movil)
      %th= model_class.human_attribute_name(:password)
      %th= model_class.human_attribute_name(:sexo)
      %th Roles
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @usuarios.each do |usuario|
      %tr
        %td= usuario.ci
        %td= usuario.nickname
        %td= usuario.apellidos
        %td= usuario.email
        %td= usuario.telefono_habitacion
        %td= usuario.telefono_movil
        %td= usuario.password
        %td= usuario.sexo_to_s
        %td= usuario.roles
        / %td=#l usuario.created_at, format: :long
        %td
          = link_to usuario_path(usuario), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_usuario_path(usuario), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to usuario_path(usuario), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do
            = glyph 'remove'

= link_to t('.new', default: t("helpers.links.new")), new_usuario_path, class: 'btn btn-primary'

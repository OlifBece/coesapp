= form_tag({controller: :importador, action: :importar}, class: 'form-horizontal') do
  = hidden_field_tag :csv, @csv_file
  = submit_tag "Cargar", {class: 'btn btn-outline-success btn-sm', disable_with: "Cargando..."}
%h5= "Importaci√≥n de #{@objeto.name.titleize}"
%table.table.table-striped.table-sm.table-hover.table-bordered.table-responsive-md.mt-3
  %thead
    %tr
    - @objeto.column_names.each do |header| 
      %th= header.to_s
    %tr
    - @csv.headers.each do |header| 
      %th= header.to_s
  %tbody
    - @csv.each do |row| 
      %tr
        - row.fields.each do |f| 
          %td= f

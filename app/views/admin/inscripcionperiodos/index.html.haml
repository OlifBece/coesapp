- model_class = Inscripcionperiodo
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:periodo_id)
      %th= model_class.human_attribute_name(:estudiante_id)
      %th= model_class.human_attribute_name(:tipo_estado_inscripcion_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @inscripcionperiodos.each do |inscripcionperiodo|
      %tr
        %td= inscripcionperiodo.id
        %td= inscripcionperiodo.periodo_id
        %td= inscripcionperiodo.estudiante_id
        %td= inscripcionperiodo.tipo_estado_inscripcion_id
        %td=l inscripcionperiodo.created_at, format: :long
        %td
          = link_to inscripcionperiodo_path(inscripcionperiodo), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_inscripcionperiodo_path(inscripcionperiodo), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to inscripcionperiodo_path(inscripcionperiodo), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do
            .text-danger= glyph 'trash'

= link_to t('.new', default: t("helpers.links.new")), new_inscripcionperiodo_path, class: 'btn btn-primary'

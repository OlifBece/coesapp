
- if current_admin
	%b.tooltip-btn{'data_toggle': 'tooltip', title: 'Descargar Acta PDF'}
		=# link_to notas_seccion_online_descargar_path(seccion.id, :pdf), class: 'badge badge-info btn-sm p-md-1', role: :button, target: "_blank" do
		= link_to notas_seccion_descargar_path(seccion.id, :pdf), class: 'badge badge-info btn-sm p-md-1', role: :button, target: "_blank" do
			= glyph 'download-alt'
			= glyph 'file'
	= link_to listado_seccion_descargar_path(seccion.id), class: "badge badge-info btn-sm p-md-1 tooltip-btn", 'data_toggle': 'tooltip', title: 'Descargar Listado', target: "_blank" do
		= glyph 'download-alt'
		= glyph 'list'
	%b.tooltip-btn{'data_toggle'=>'tooltip', 'title'=>'Descargar Listado en Excel'}
		= link_to listado_seccion_excel_descargar_path(seccion.id), class: "badge badge-success btn-success btn-sm p-md-1", target: "_blank" do
			= glyph 'download-alt'
			= glyph 'list'
			X

	-if seccion.calificada
		%b.tooltip-btn{'data_toggle': 'tooltip', title: 'Descargar Acta en Excel'}
			= link_to acta_examen_excel_descargar_path(seccion.id), class: 'badge badge-success btn-sm p-md-1', role: :button, target: "_blank" do
				= glyph 'download-alt'
				= glyph 'file'
				X

%b.tooltip-btn{'data_toggle': :tooltip, title: 'Ver Detalle / Calificar'}
	= link_to seccion_path(seccion), class: 'badge badge-info btn-sm ml-md-1 p-md-1', role: :button do
		= content_tag(:i, "", class: " icon-white")
		= glyph 'search'
		= glyph 'check'
- if seccion.estudiantes.count < 1

	%b.tooltip-btn{'data_toggle': :tooltip, title: 'Eliminar Seccion'}
		= link_to "", {href: seccion_path(seccion), class: 'btn-outline-danger btn-sm ml-md-1 p-md-1', data: {confirm: "Se perderan los estudiantes inscritos en la sección, ¿Está seguro de esta acción?"}, method: :delete} do
			= glyph 'trash'
- if current_admin.maestros? 

	- if seccion.calificada
		%b.tooltip-btn{'data_toggle': :tooltip, title: 'Habilitar para Calificar Nuevamente'}
			= link_to habilitar_calificar_seccion_path(seccion.id), {class: 'badge badge-info btn-sm ml-md-1 p-md-1'}, {role: 'button'} do
				= glyph 'off'
				= glyph 'list'
	-# elsif seccion.tiene_trimestres1? or seccion.tiene_trimestres2?
	/%b.tooltip-btn{'data_toggle': :tooltip, title: 'Habilitar para Calificar Trimestre1 Nuevamente'}
	=# link_to habilitar_calificar_trim_seccion_path(seccion.id), {class: 'badge badge-info btn-sm ml-md-1 p-md-1'}, {role: 'button'} do
	=# glyph 'off'
